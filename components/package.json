{
  "name": "@schematichq/schematic-components",
  "version": "1.9.1",
  "main": "dist/schematic-components.cjs.js",
  "module": "dist/schematic-components.esm.js",
  "types": "dist/schematic-components.d.ts",
  "files": [
    "dist/schematic-components.cjs.js",
    "dist/schematic-components.esm.js",
    "dist/schematic-components.d.ts"
  ],
  "author": "Schematic <engineering@schematichq.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/SchematicHQ/schematic-js.git"
  },
  "scripts": {
    "dev": "bun run dev:esm",
    "dev:cjs": "bunx esbuild src/index.ts --watch --bundle --external:react --external:react-dom --external:@stripe/react-stripe-js --format=cjs --outfile=dist/schematic-components.cjs.js --define:process.env.SCHEMATIC_COMPONENTS_VERSION=$(cat package.json | jq .version)",
    "dev:esm": "bunx esbuild src/index.ts --watch --bundle --external:react --external:react-dom --external:@stripe/react-stripe-js --format=esm --outfile=dist/schematic-components.esm.js --define:process.env.SCHEMATIC_COMPONENTS_VERSION=$(cat package.json | jq .version)",
    "build": "bunx tsc && bun run openapi && bun run format && bun run lint && bun run clean && bun run build:cjs && bun run build:esm && bun run build:types",
    "build:cjs": "bunx esbuild src/index.ts --bundle --external:react --external:react-dom --external:@stripe/react-stripe-js --format=cjs --outfile=dist/schematic-components.cjs.js --define:process.env.SCHEMATIC_COMPONENTS_VERSION=$(cat package.json | jq .version)",
    "build:esm": "bunx esbuild src/index.ts --bundle --external:react --external:react-dom --external:@stripe/react-stripe-js --format=esm --outfile=dist/schematic-components.esm.js --define:process.env.SCHEMATIC_COMPONENTS_VERSION=$(cat package.json | jq .version)",
    "build:types": "bunx tsc && bunx api-extractor run",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --fix",
    "openapi": "./generate_openapi.sh -c ./src/api/config_checkoutexternal.yml && ./generate_openapi.sh -c ./src/api/config_componentspublic.yml",
    "test": "bun test",
    "tsc": "bunx tsc",
    "test:demo": "../scripts/test-components.sh"
  },
  "dependencies": {
    "@schematichq/schematic-icons": "^0.5.2",
    "@stripe/stripe-js": "^8.1.0",
    "i18next": "^25.5.2",
    "lodash": "^4.17.21",
    "pako": "^2.1.0",
    "react-i18next": "^16.0.1",
    "styled-components": "^6.1.19",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@eslint/json": "catalog:",
    "@eslint/markdown": "catalog:",
    "@microsoft/api-extractor": "catalog:",
    "@openapitools/openapi-generator-cli": "catalog:",
    "@stripe/react-stripe-js": "^4.0.2",
    "@types/bun": "latest",
    "@types/lodash": "catalog:",
    "@types/pako": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "esbuild": "catalog:",
    "eslint": "catalog:",
    "eslint-import-resolver-typescript": "catalog:",
    "eslint-plugin-import": "catalog:",
    "eslint-plugin-react": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "globals": "catalog:",
    "prettier": "catalog:",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "peerDependencies": {
    "@stripe/react-stripe-js": ">=3",
    "react": ">=18",
    "react-dom": ">=18"
  }
}
