{
  "name": "@schematichq/schematic-js",
  "version": "1.2.6",
  "main": "dist/schematic.cjs.js",
  "module": "dist/schematic.esm.js",
  "types": "dist/schematic.d.ts",
  "files": [
    "dist/schematic.cjs.js",
    "dist/schematic.esm.js",
    "dist/schematic.browser.js",
    "dist/schematic.d.ts"
  ],
  "author": "Schematic <engineering@schematichq.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/SchematicHQ/schematic-js.git"
  },
  "scripts": {
    "build": "./version.sh && bunx tsc && bun run clean && bun run build:browser && bun run build:cjs && bun run build:esm && bun run build:types",
    "build:browser": "bunx esbuild src/browser.ts --bundle --minify --outfile=dist/schematic.browser.js --platform=browser",
    "build:cjs": "bunx esbuild src/index.ts --bundle --format=cjs --outfile=dist/schematic.cjs.js",
    "build:esm": "bunx esbuild src/index.ts --bundle --format=esm --outfile=dist/schematic.esm.js",
    "build:types": "bunx tsc && bunx api-extractor run",
    "clean": "rm -rf dist",
    "format": "prettier --write src/*.ts",
    "lint": "eslint src --report-unused-disable-directives --fix",
    "openapi": "rm -rf src/types/api/ && bunx openapi-generator-cli generate -c openapi-config.yaml --global-property models=\"EventBody:EventBodyFlagCheck:EventBodyIdentify:EventBodyIdentifyCompany:EventBodyTrack:CheckFlagResponse:CheckFlagResponseData:CheckFlagsResponse:CheckFlagsResponseData\",supportingFiles=runtime.ts && prettier --write \"src/types/api/**/*.{ts,tsx}\"",
    "prepare": "husky",
    "test": "bun test",
    "test:reactnative": "bun test --preload ./test-setup.reactnative.ts",
    "tsc": "bunx tsc"
  },
  "dependencies": {
    "cross-fetch": "^4.1.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@microsoft/api-extractor": "catalog:",
    "@openapitools/openapi-generator-cli": "catalog:",
    "@types/bun": "latest",
    "@types/uuid": "catalog:",
    "esbuild": "catalog:",
    "eslint": "catalog:",
    "globals": "catalog:",
    "husky": "catalog:",
    "mock-socket": "^9.3.1",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  }
}
