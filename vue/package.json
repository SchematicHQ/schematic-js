{
  "name": "@schematichq/schematic-vue",
  "version": "1.0.0",
  "main": "dist/schematic-vue.cjs.js",
  "module": "dist/schematic-vue.esm.js",
  "types": "dist/schematic-vue.d.ts",
  "files": [
    "dist/schematic-vue.cjs.js",
    "dist/schematic-vue.esm.js",
    "dist/schematic-vue.d.ts"
  ],
  "author": "Schematic <engineering@schematichq.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/SchematicHQ/schematic-js.git"
  },
  "scripts": {
    "dev": "yarn tsc --watch",
    "build": "./version.sh && yarn tsc && yarn format && yarn lint && yarn clean && yarn build:cjs && yarn build:esm && yarn build:types",
    "build:cjs": "npx esbuild src/index.ts --bundle --external:vue --format=cjs --outfile=dist/schematic-vue.cjs.js",
    "build:esm": "npx esbuild src/index.ts --bundle --external:vue --format=esm --outfile=dist/schematic-vue.esm.js",
    "build:types": "npx tsc && npx api-extractor run",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src --ext ts --report-unused-disable-directives --fix",
    "test": "jest --config jest.config.js",
    "tsc": "npx tsc",
    "prepare": "husky"
  },
  "dependencies": {
    "@schematichq/schematic-js": "^1.2.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@microsoft/api-extractor": "^7.52.2",
    "@testing-library/dom": "^10.4.1",
    "@types/jest": "^30.0.0",
    "@vue/test-utils": "^2.4.6",
    "esbuild": "^0.25.2",
    "esbuild-jest": "^0.5.0",
    "eslint": "^9.24.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-vue": "^9.30.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "jest-esbuild": "^0.4.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.3.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.29.1",
    "vue": "^3.5.13"
  },
  "peerDependencies": {
    "vue": ">=3.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
